<div class="row d-md-flex min-vh-100 min-vw-100">
  <div class="col col-12 col-md-4 left-container"></div>
  <div class="col col-12 col-md-8 py-5">
    <div class="row d-md-flex registration-card">
      <div class="col-sm-12 col-md-4 registration-card-left d-none d-sm-block
                  text-center d-md-flex align-items-end rounded-left">
        <%= image_tag "avatar.svg", class: "tea-cup-registration" %>
      </div>
      <div class="col-sm-12 col-md-8 registration-card-right p-4 px-sm-5 pt-sm-5 pb-sm-2 rounded-right">
        <h2 class="pb-4 text-center text-md-left">Sign up</h2>

        <%= simple_form_for(resource, as: resource_name,
                                      url: registration_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <div class="row">
            <%= f.input :first_name,
                        required: true,
                        label: false,
                        autofocus: true,
                        placeholder: '🧑‍💼 First name',
                        wrapper_html: { class: 'col-12 col-lg-6' },
                        input_html: { autocomplete: "first name" }%>
            <%= f.input :last_name,
                        required: true,
                        label: false,
                        autofocus: true,
                        placeholder: '🧑‍💼 Last name',
                        wrapper_html: { class: 'col-12 col-lg-6' },
                        input_html: { autocomplete: "last name" }%>
            </div>
            <%= f.input :email,
                        required: true,
                        label: false,
                        autofocus: true,
                        placeholder: '✉️ email@domain.com',
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: true,
                        label: false,
                        placeholder: "🗝 your-password",
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        label: false,
                        placeholder: '🗝 confirm-password',
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :button, '', { class: 'btn btn-dark btn-block btn-registration', "data-hover": "Let's go!"} do %>
              <span>Sign up</span>
            <% end %>
          </div>

          <div class="col-12 col-md-6 text-center forgot-password-container
                      d-md-none">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot password?", new_password_path(resource_name),
                class: 'links-small' %>
            <% end %>
          </div>
        <% end %>

        <p class="text-center py-2 py-sm-4 m-0">- OR -</p>
        <%= link_to user_github_omniauth_authorize_path, class: 'btn btn-outline-dark btn-block' do %>
          <i class="fab fa-github"></i> Sign up with Github
        <% end %>

        <p class="call-out-signup text-center mt-3 mb-0">
          Already have an account?
          <%= link_to "Log in", new_session_path(resource_name) %>
        </p>
        <p class="call-out-signup text-center">
          Didn't receive confirmation instructions?
          <%= link_to "Resend", new_confirmation_path(resource_name) %>
        </p>
      </div>
    </div>
  </div>
</div>
